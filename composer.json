{
  "name": "marijnvanwezel/iucnbot",
  "description": "Wikipedia bot that adds and updates IUCN Red List statuses.",
  "type": "project",
  "keywords": [
    "wikipedia"
  ],
  "homepage": "https://github.com/marijnvanwezel/iucnbot",
  "readme": "https://github.com/marijnvanwezel/iucnbot/README.md",
  "license": "GPL-3.0-only",
  "authors": [
    {
      "name": "Marijn van Wezel",
      "email": "marijnvanwezel@gmail.com",
      "homepage": "https://www.marijn.it",
      "role": "lead"
    }
  ],
  "support": {
    "issues": "https://github.com/marijnvanwezel/iucnbot/issues",
    "source": "https://github.com/marijnvanwezel/iucnbot"
  },
  "require": {
    "php": ">=8.1",
    "addwiki/mediawiki-api": "^3.0",
    "ext-mbstring": "*"
  },
  "autoload": {
    "psr-4": {
      "MarijnVanWezel\\IUCNBot\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "MarijnVanWezel\\IUCNBot\\Tests\\": "tests/"
    }
  },
  "minimum-stability": "stable",
  "config": {
    "platform": {
      "php": "8.1.0"
    },
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "bin": [
    "iucnbot"
  ],
  "require-dev": {
    "phpunit/phpunit": "^9.5"
  }
}
